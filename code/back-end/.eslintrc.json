{
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "plugin:prettier/recommended",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "node",
        "prettier",
        "jest"
    ],
    "rules": {
        "no-console": "warn",
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-var": "error",
        "prefer-const": "error",
        "eqeqeq": ["error", "always"],
        "no-unused-vars": [
            "error", 
            { 
                "args": "none",
                "ignoreRestSiblings": true 
            }
        ],
        "no-process-exit": "off"
    }
}