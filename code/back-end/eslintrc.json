{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["node", "prettier"],
  "rules": {
    "no-console": "warn",
    "semi": ["off", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-mixed-requires": "error",
    "handle-callback-err": "error",
    "no-path-concat": "error",
    "no-trailing-spaces": "error",
    "prefer-const": "error",
    "newline-per-chained-call": "off",
    "no-process-exit": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "printWidth": 50,
        "singleQuote": true,
        "proseWrap": "preserve",
        "semi": false,
        "jsxSingleQuote": true,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "useTabs": false,
        "tabIndent": true,
        "useJSXSnippet": true,
        "jsxBracketSameLine": true,
        "singleAttributePerLine": true,
        "jsxSingleLine": true,
        "objectCurlySingle": true,
        "objectCurlyNewline": "consistent",
        "objectPropertyNewline": "consistent",
        "arrayBracketNewline": "consistent",
        "arrayElementNewline": "consistent"
      }
    ]
  }
}